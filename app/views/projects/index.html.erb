 project-index-page
<h1> Projects Overview</h1>
<div class="cards-container">
<ul>
  <% @projects.each do |project|%>
  <li><%= project.room%></li>
  <li><%= project.location%></li>
  <li><%= project.budget%></li>
  <li><%= project.time_frame%></li>
  <li><%= project.sustainability%></li>
  <li><%= project.description%></li>
  <li><%= image_tag project.img_url %></li>
  <%= link_to "See project details", project_path(project)%>
  <% end %>
  <%= link_to "Create a new project", new_project_path %>
</ul>

<!DOCTYPE html>
<html>
<head>
    <title>ReHome</title>
    <link rel="stylesheet" type="text/css" href="styles.css">
</head>
<body>
    <!-- Header -->
    <header>
        <nav>
            <ul>
                <li><a href="#">Home</a></li>
                <li><a href="#">About</a></li>
                <li><a href="#">Search</a></li>
                <li><a href="#">Contact</a></li>
            </ul>
        </nav>
    </header>

    <!-- Hero Section -->
    <section id="hero">
        <div class="hero-content">
            <h1>Welcome to ReHome</h1>
            <p>Housing improvement matchmaking platform. Find unique solutions to you redesigning your home</p>
            <a href="..." class="btn btn-success">Create an Account</a>
        </div>
    </section>
<div class="cards-container">
<!-- Cards -->
  <div class="cards">
  <div class="card" style="background-image: url(https://www.pexels.com/photo/white-ceramic-bathtub-near-white-ceramic-bathtub-3288104/)">
      Bathroom
    </div>
    <!-- Search Section -->
    <section id="search">
        <div class="search-form">
            <h2>Create Your Project</h2>
            <form>
                <input type="text" placeholder="Type of room">
                <input type="place" placeholder="Location">
                <input type="number" placeholder="Budget">
                <input type="sustainability" placeholder="Sustainabilty">
                <a href="..." class="btn btn-primary">Create a project</a>
            </form>
        </div>
    </section>
    
<div class="row">
    <% @projects.each do |project|%>
      <div class="card col-6 m-4" style="width: 18rem;">
        <img src=<%= project.img_url %>% class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title"><%= project.description %> </h5>
          <p class="card-text"> <%=project.address%> </p>
          <p class="card-text"> <%=project.time_frame%> weeks </p>
          <p class="btn btn-success text-muted"><%= link_to "See project details", project_path(project.id) %></p>
        </div>
      </div>
    <% end %>
    <p class="btn btn-success"> <%= link_to "Create a new project", new_project_path %> </p>
</div>

    <!-- Listings Section -->
    <section id="listings">
        <h2>Featured Listings</h2>
        <div class="listing-card">
            <img src="" alt="Listing 1">
            <h3>Kitchen redesign</h3>
            <p>Looking for redesigning my kitchen</p>
            <a href="#">View Details</a>
        </div>
        <div class="listing-card">
            <img src="https://www.pexels.com/photo/white-ceramic-bathtub-near-white-ceramic-bathtub-3288104/" alt="Listing 2" class="rounded">
            <h3>Upgading my bathroom</h3>
            <p>I need to change the floor and add new tiles in my bathroom</p>
            <a href="#">View Details</a>
        </div>
        <!-- Add more listing cards here -->
    </section>

    <!-- Footer -->
    <footer>
        <p>2023 Rehome Website. All rights reserved</p>
    </footer>
</body>
</div>
</html>
