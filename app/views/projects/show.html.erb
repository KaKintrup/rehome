<div class="container">

  <h1><%= @project.title %></h1>

<!-- alterantive display of project -->

<div class="card-project-image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= "#{@project.img_url}" %>)">
</div>

<div class="card-project-text">

  <p class="card-text"><%= @project.description %></p>
  <p class="card-text"><%= @project.room %></p>
  <p class="card-text"><%= @project.address %></p>
  <p class="card-text"><%= @project.budget %> â‚¬ </p>
  <p class="card-text"><%= @project.time_frame %> weeks </p>
  <p class="card-text"> Sustainability <%= @project.sustainability %></p>
</div>


<!-- display all the information about offers -->

<% chosen = @project.offers.any? { |offer| offer.offer_status == true } %>

<% if chosen %>
  <ul class="list-group">
    <% @project.offers.each do |offer| %>
      <% if offer.offer_status == true %>
        <li class="list-group-item">
        <%= offer.name %>
        <%= offer.comment %>
        <% if @project.user == current_user %>
          <%= offer.email %>#
        <% end %>

          <% if @project.user == current_user %>

          <p class="btn btn-success"> <%= link_to "Choose diffrent Offer", offer_path(offer),
            data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %></p>
          <% end %>
        </li>
      <% end %>
    <% end %>
  </ul>
<% else %>
    <% if @project.user == current_user %>
    <p><strong>Current Offers</strong></p>
    <% else %>
          <p><strong>Offers</strong></p>
          <p><%= link_to "Create new Offer", new_project_offer_path(@project) %></p>
    <% end %>


  <ul class="list-group">
    <% @project.offers.each do |offer| %>
      <li class="list-group-item"><%= offer.name %>: <%= offer.comment %>
         <% if @project.user == current_user %>

          <p class="btn btn-success"><%= link_to "Accept Offer", edit_project_offer_path(offer) %></p>
          <% end %>

          <% if @project.user == current_user %>

          <p class="btn btn-success"><%= link_to "Delete Offer", offer_path(offer),
                    data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %></p>
          <% end %>
      </li>
    <% end %>
  </ul>
<% end %>



  <br>


 <% if @project.user == current_user %>
<p class="btn btn-success"><%= link_to "Delete project", project_path(@project),
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%></p>
<% end %>

 <% if @project.user == current_user %>
<p class="btn btn-success"><%= link_to "Update project",  edit_project_path(@project) %></p>
<% end %>




  </div>





</div>
